<% provide(:title, 'カテゴリー一覧') %>

<div class="d-flex align-items-center">
  <h1>カテゴリー一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "カテゴリー作成", new_category_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<%= render 'layouts/notice_message' %>

<table class="table table-hover">
  <tbody>
    <% @categories.each do |cate| %>
      <tr>
        <td><%= cate.name %></td>
        <td><%= cate.created_at.to_s(:datetime_jp) %>作成</td>
        <td><%= link_to "削除", cate, class: "btn btn-outline-danger", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>