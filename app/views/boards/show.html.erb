<% provide(:title, @board.title) %>

<div class="d-flex align-items-center mt-4 mb-4">
  <h1>掲示板詳細</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "一覧", boards_path, class: "btn btn-outline-primary" %>
    <% if @board.user_id == @current_user.id %>
      <%= link_to "編集", edit_board_path, class: "btn btn-outline-success" %>
      <%= link_to "削除", @board, class: "btn btn-outline-danger", method: :delete, data: { confirm: "削除してもよろしいですか？" } %>
    <% end %>
  </div>
</div>

<%= render 'layouts/notice_message' %>

<div class="card">
  <div class="card-header">
    <h4><%= image_tag @board.user.image.thumb1.url, class: 'trim-image-to-circle show__boardTitleImg' %><%= @board.title %></h4>
    <% @board.categories.each do |cate| %>
      <span class="badge badge-primary"><%= cate.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@board.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @board.name %></p>
  </div>
</div>



<div class="p-comment__list">
  <div class="p-comment__listTitle">
    <%= render @board.comments %>
  </div>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment } %>