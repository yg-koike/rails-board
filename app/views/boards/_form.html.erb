<%= render 'layouts/error_messages' %>

<%= form_with model: board do |f| %>
  <%= f.hidden_field :user_id %>
  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= render 'layouts/must_badge' %>
    <%= f.text_field :name, class: 'form-control', value: @current_user.user_name %>
  </div>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= render 'layouts/must_badge' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, '本文' %>
    <%= render 'layouts/must_badge' %>
    <%= f.text_area :body, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <span>カテゴリー</span>
    <div class="check__cate">    
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cate| %>
        <div class="form-check">
          <%= cate.label class: 'form-check-label' do %>
            <%= cate.check_box class: 'form-check-input' %>
            <%= cate.text %>
          <% end %>
        </div>
      <% end %>
    </div>
    
  </div>
  


  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>



