<%= render 'layouts/error_messages.html.erb' %>

  <p class="comment__formTitle">
    <%= icon "fas", "comments" %>
    コメント記入
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>
  <%= form_with model: comment, local: true do |f| %>
    <%= f.hidden_field :board_id %>
    <div class="form-group">
      <%= f.label :name, '名前(変更可,10字以内)' %>
      <%= render 'layouts/must_badge' %>
      <%= f.text_field :name, class: 'form-control', value: current_user.user_name %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント(400字以内)' %>
      <%= render 'layouts/must_badge' %>
      <%= f.text_area :comment, class: 'form-control', id: 'input-comment', rows: 4 %>
      <p  class="form__counter" id="comment-counter">0文字</p>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
