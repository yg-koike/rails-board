<%= render 'layouts/error_messages.html.erb' %>

<div class="comment__formBox">
  <p class="comment__formTitle">
    <%= icon "fas", "comments" %>
    コメント記入
  </p>
  <%= form_for comment do |f| %>
    <%= f.hidden_field :board_id %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= render 'layouts/must_badge' %>
      <%= f.text_field :name, class: 'form-control', value: current_user.user_name %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= render 'layouts/must_badge' %>
      <%= f.text_area :comment, class: 'form-control', rows: 4 %>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>